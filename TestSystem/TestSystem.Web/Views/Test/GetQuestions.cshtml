@model List<TestSystem.Web.Models.QuestionForTestViewModel>
@*@using PagedList.Mvc;


    <link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />*@


    <div class="row">
        <div class="card mb-3">
            <div class="card-header">
                <i class="fa fa-table"></i> Last questions
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    @using (Html.BeginForm("GetQuestions", "Test", FormMethod.Post))
                    {
                        <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                            <thead class="thead-dark">
                                <tr>
                                    <td>Question</td>
                                    <td>Theme</td>
                                    <td>Difficult</td>
                                    <td>Adding to test</td>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IdQuestion)
                                        </td>
                                        <td>
                                            <a class="nav-link" href="@Url.Action("Details", "Question", new { id = item.IdQuestion })">
                                                @Html.DisplayFor(modelItem => item.QuestionText)
                                            </a>
                                        </td>
                                        <td>
                                            <a class="nav-link" href="@Url.Action("Details", "Question", new { id = item.IdQuestion })">
                                                @Html.DisplayFor(modelItem => item.Theme)
                                            </a>
                                        </td>
                                        <td>
                                            <a class="nav-link" href="@Url.Action("Details", "Question", new { id = item.IdQuestion })">
                                                @Html.DisplayFor(modelItem => item.Difficult)
                                            </a>
                                        </td>
                                        <td>
                                            <a class="nav-link" href="@Url.Action("Details", "Question", new { id = item.IdQuestion })">
                                                @Html.CheckBoxFor(modelItem => item.Chosen)
                                            </a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Add questions" class="btn btn-default" />
                            </div>
                        </div>
                    }

                    @*<div class="btn-group" id="contentPager">
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) from @Model.PageCount
        @Html.PagedListPager(Model, pageQuestions => Url.Action("CreateNewTest", new { pageQuestions, }))*@

                </div>
            </div>
        </div>
    </div>

