@model IEnumerable<TestSystem.Web.Models.TestViewModel>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "CommonTables";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<h2>CommonTables</h2>
<div class="container">
    <div class="row">
        <div class="card mb-3">
            <div class="card-header">
                <i class="fa fa-table"></i> Last tests
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <td>Test name</td>
                                <td>Questions number</td>
                                <td>Description</td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.Tests)
                            {
                                <tr>
                                    <td>
                                        @item.TestName
                                    </td>
                                    <td>
                                        @item.QuestionsNumber
                                    </td>
                                    <td>
                                        @item.TestDescription
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="btn-group">
                        Page
                        @(ViewBag.Tests.PageCount < ViewBag.Tests.PageNumber ? 0 : ViewBag.Tests.PageNumber)
                        from @ViewBag.Tests.PageCount
                        @Html.PagedListPager(
                       (PagedList.IPagedList<TestSystem.Web.Models.TestViewModel>)ViewBag.Tests,
                       page => Url.Action("CommonTables", new { page }))
                   </div>
                    </div>
                </div>
            </div>
