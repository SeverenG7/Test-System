@model PagedList.IPagedList<TestSystem.Logic.DataTransferObjects.QuestionDTO>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />


<div class="row">
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i> Last questions
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                    <thead class="thead-dark">
                        <tr>
                            <td>Question</td>
                            <td>Answers</td>
                            <td>Score</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {   
                            <tr>
                                <td>
                                    <a class="nav-link" href="@Url.Action("Details", "Question",new {id = item.IdQuestion })">
                                        @Html.DisplayFor(modelItem => item.QuestionText) </a>
                                </td>
                                <td>
                                    <a class="nav-link" href="@Url.Action("Details", "Question", new {id = item.IdQuestion })">
                                        @Html.DisplayFor(modelItem => item.AnswerNumber)
                                        </a>
                                </td>
                                <td>
                                    <a class="nav-link" href="@Url.Action("Details", "Question", new {id = item.IdQuestion })">
                                        @Html.DisplayFor(modelItem => item.Score)
                                        </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="btn-group" id="contentPager">
                    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount
                    @Html.PagedListPager(Model, pageQuestions => Url.Action("CommonTables", new { pageQuestions }))
                </div>
            </div>
        </div>
    </div>
</div>

