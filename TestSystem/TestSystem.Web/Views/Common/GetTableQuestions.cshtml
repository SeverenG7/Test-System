@model PagedList.IPagedList<TestSystem.Web.Models.QuestionViewModel>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />


<div class="row">
    <div class="card mb-3">
        <div class="card-header badge-primary">
            <i class="fa fa-table"></i> Last questions
        </div>
        <div class="card-body ">
            <div class="table-responsive">
                <div class="panel panel-primary">
                    <div class="panel-heading" >Last added 5 questions...</div>
                    <table class="table table-bordered  table-hover  " width="100" cellspacing="10" >
                        <thead class="bg-primary text-white">
                            <tr class="thead-dark">
                                <td>Question</td>
                                <td>Theme</td>
                                <td>Difficult</td>
                            </tr >
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr >
                                    <td >
                                        <a class="nav-link text-dark" href="@Url.Action("GetInfoQuestion", "Question",new {IdQuestion  = item.IdQuestion })">
                                            @Html.DisplayFor(modelItem => item.QuestionText)
                                        </a>
                                    </td>
                                    <td>
                                        <a class="nav-link text-dark" href="@Url.Action("GetInfoQuestion", "Question",new {IdQuestion  = item.IdQuestion })">
                                            @Html.DisplayFor(modelItem => item.Theme)
                                        </a>
                                    </td>
                                    <td>
                                        <a class="nav-link text-dark" href="@Url.Action("GetInfoQuestion", "Question",new {IdQuestion  = item.IdQuestion })">
                                            @Html.DisplayFor(modelItem => item.Difficult)
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="form-row">
                        <div class="col-md-3"> Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) from @Model.PageCount</div>
                    </div>
                    <div class="btn-group" id="contentPager">
                        @Html.PagedListPager(Model, pageQuestions => Url.Action("CommonTables", new { pageQuestions }))
                    </div>
                </div>
                <div class="container">
                    <form action="@Url.Action("GetInfoQuestion", "Question")">
                        <button class="btn btn-primary" type="submit">More about questions...</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/scripts/jquery-3.3.1.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")

