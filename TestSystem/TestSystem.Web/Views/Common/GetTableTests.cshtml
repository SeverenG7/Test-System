@model PagedList.IPagedList<TestSystem.Logic.DataTransferObjects.TestDTO>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

<div class="row">
    <div class="card mb-3">
        <div class="card-header badge-primary">
            <i class="fa fa-table"></i> Last tests
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <div class="panel panel-primary">
                    <div class="panel-heading">Last added 5 test...</div>
                    <table class="table table-bordered table-hover"  width="100" cellspacing="10">
                        <thead class="bg-primary text-white">
                            <tr class="bg-primary text-white">
                                <td>Test name</td>
                                <td>Questions number</td>
                                <td>Description</td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TestName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.QuestionsNumber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TestDescription)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="form-row">
                        <div class="col-md-3"> Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) from @Model.PageCount</div>
                    </div>
                    <div class="btn-group" id="contentPager">
                        @Html.PagedListPager(Model, pageTests => Url.Action("CommonTables", new { pageTests }))
                    </div>
                    <div class="container">
                        <form action="@Url.Action("GetInfoTest", "Test")">
                            <button class="btn btn-primary" type="submit">More about tests...</button>
                        </form>
                    </div>
                </div>
            </div>
    </div>
</div>
    </div>

