
@{
    Layout = ViewBag.Layout;
    ViewBag.Title = "Error 403";

}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Error 403</title>
    <!-- Bootstrap core CSS-->
    <link href=@Url.Content("/Content/vendor/bootstrap/css/bootstrap.min.css") rel="stylesheet">
    <!-- Custom fonts for this template-->
    <link href=@Url.Content("/Content/vendor/font-awesome/css/font-awesome.min.css") rel="stylesheet" type="text/css">
    <!-- Custom styles for this template-->
    <link href=@Url.Content("/Content/css/sb-admin.css") rel="stylesheet">
</head>
<body style="background-image:url(../../Content/actionImages/userBack.jpg)">

    <div class="container">
        <div class="form-horizontal">
            <div class=" text-center">
                <h2 class="display-4 text-info">
                   Sorry, but you do not have premission to access / on this server
                </h2>
            </div>
            <div class="text-center">
                @if (ViewBag.Image != null)
                {
                    <img src="~/Content/actionImages/error-403.jpg"  class="img-responsive" />
                }
            </div>
            <div class="text-center mt-5">
                @if (ViewBag.Reference == null)
                {
                    <div class="text-center">
                        <label class="text-center">
                            Actually , it seems like you not to login :
                        </label>
                    </div>
                    <button class="btn btn-primary" onclick="location.href='@Url.Action("Login" , "Account")'">
                        Login
                    </button>
                    <label class="text-center">
                        or not register
                    </label>
                    <button class="btn btn-primary" onclick="location.href='@Url.Action("Register" , "Account")'">
                        Register
                    </button>
                }
                @if (User.IsInRole("user"))
                {
                    <button class="btn btn-primary" onclick="location.href='@Url.Action("MainMenu", "User")'">
                        Return to main menu
                    </button>
                }
                @if (User.IsInRole("admin"))
                {
                    <button class="btn btn-primary" onclick="location.href='@Url.Action("CommonTables", "Common")'">
                        Return to main menu
                    </button>
                }
            </div>
        </div>
    </div>
</body>
</html>




