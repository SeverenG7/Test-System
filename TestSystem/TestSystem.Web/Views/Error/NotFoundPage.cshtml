
@{
    Layout = ViewBag.Layout;
    ViewBag.Title = "Error 404";

}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Enter into the system</title>
    <!-- Bootstrap core CSS-->
    <link href=@Url.Content("/Content/vendor/bootstrap/css/bootstrap.min.css") rel="stylesheet">
    <!-- Custom fonts for this template-->
    <link href=@Url.Content("/Content/vendor/font-awesome/css/font-awesome.min.css") rel="stylesheet" type="text/css">
    <!-- Custom styles for this template-->
    <link href=@Url.Content("/Content/css/sb-admin.css") rel="stylesheet">
</head>
<body>

    <div class="container">
        <div class="form-horizontal">
            <div class=" text-center">
                <h2 class="display-4">
                    The page you were looking for can't be found
                </h2>
            </div>
            <div class="text-center">
                @*<img src="~/Content/img/2GlHXz9aM2U.jpg" width="450" height="450" alt="image1" class="img-responsive" />*@
                <img src="~/Content/img/IlV44CfodWQ.jpg" width="300" height="300" alt="image1" class="img-responsive" />
            </div>
            <div class="text-center mt-5">
                @if (ViewBag.Layout == null)
                {
                    <div class="text-center">
                        <label class="text-center">
                            Actually , it seems like you not to login :
                        </label>
                    </div>
                    <button class="btn btn-primary" onclick="location.href='@Url.Action("Login" , "Account")'">
                        Login
                    </button>
                    <label class="text-center">
                        or not register
                    </label>
                    <button class="btn btn-primary" onclick="location.href='@Url.Action("Register" , "Account")'">
                        Register
                    </button>
                }
                else
                {
                    <button class="btn btn-primary" onclick="location.href='@ViewBag.Reference'">
                        Return to main menu
                    </button>
                }
            </div>
        </div>
    </div>
</body>
</html>



