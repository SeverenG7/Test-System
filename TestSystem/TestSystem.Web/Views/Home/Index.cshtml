@model IEnumerable<TestSystem.Web.Models.QuestionViewModel>
@{
    ViewBag.Title = "Home Page";
}


@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.QuestionText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdQuestion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AnswerNumber)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdQuestion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnswerNumber)
            </td>
            <td></td>
        </tr>
    }

</table>
